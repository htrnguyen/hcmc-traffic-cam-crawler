# Timezone
TIMEZONE=Asia/Ho_Chi_Minh

# Crawl
INTERVAL_SEC=180
CONCURRENCY=60
TIMEOUT_S=12.0          
RETRIES=2            

# Paths
OUT_ROOT=staging_images
LOG_DIR=logs

# Rclone)
UPLOAD_MODE=files_from
UPLOAD_LIST=logs/upload_now.txt
PRIME_FULL_MOVE=1

# Snapshot endpoint & NA fingerprint
IMG_BASE=https://giaothong.hochiminhcity.gov.vn/render/ImageHandler.ashx
NA_SIZE=284x177
NA_SHA256=1ef51d905a2e9d42678f4a37d5d54ecf9407dfd683ef39607782ddd64ab1aed5
NA_AHASH=ffe3cbc3c3e781ff

# Blacklist
BLACKLIST_MODE=na_immediate   # gặp NA là loại ngay để giảm tải
BLACKLIST_STREAK=3            # dùng nếu chuyển sang na_after_streak
BLACKLIST_TTL_DAYS=7          # 0 = vĩnh viễn; 7 ngày là hợp lý
BLACKLIST_FILE=logs/blacklist.json
BLACKLIST_DELETE_LOCAL=1      # xóa thư mục cam ở local khi blacklist (giảm sync thừa)

# Rclone & Google Drive
RCLONE_EXE=rclone-v1.71.0-windows-amd64/rclone.exe
RCLONE_REMOTE=gdrv
GDRIVE_FOLDER_ID=YOUR_FOLDER_ID_HERE

# Rclone tuning
# Min-age là THỜI GIAN CHỜ kể từ lúc file được enqueue (do uploader event-driven xử lý).
# Linux: 5s là mượt; Windows/AV chạy nền: 8–12s để chắc không bị khóa file.
RCLONE_MIN_AGE_S=8

# Số luồng: 24–32 là “điểm ngọt” cho nhiều file nhỏ trên Google Drive.
# Nếu hay bị 403/429, hạ xuống 16–20.
RCLONE_TRANSFERS=24
RCLONE_CHECKERS=24

# Buffer/chunk nhỏ cho ảnh nhỏ (giảm memory & handshake phí).
RCLONE_BUFFER_SIZE=8M
RCLONE_CHUNK_SIZE=32M

# Không traverse remote (vì ta chỉ push file biết trước bằng --files-from-raw)
RCLONE_NO_TRAVERSE=1
